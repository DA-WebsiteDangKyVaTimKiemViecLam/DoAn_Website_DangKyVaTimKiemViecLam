@using WebSite_DKTKViecLam.Models;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <link href="~/content/bootstrap.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap-reboot.min.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://kit.fontawesome.com/54f0cb7e4a.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/bootstrap/css/StyleSearch.css" rel="stylesheet" />
    <link href="~/bootstrap/css/Footer.css" rel="stylesheet" />
    <script src="~/bootstrap/js/Search.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row p-1 bg-light">
            <div class="col-2">
                <a href="/Home/Index"><img class=" card-img-top " width="80" height="140" src="~/Hinh/Logo.png" /></a>
            </div>
            <div class="col-7 p-md-2 ">
                <nav class="navbar navbar-expand-sm navbar-dark  p-3">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" style="color:black;margin-left:15px" href="/Home/Index"><b>Trang Chủ</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:black;margin-left:15px" href="/Home/GioiThieu"><b>Giới Thiệu</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:black;margin-left:15px" href="/Home/LienHe"><b>Liên Hệ</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:black;margin-left:15px" href="/Home/ViecLamTopDau"><b>Việc Làm Top Đầu</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:black;margin-left:15px" href="/Home/DanhSachCongViecVaDoanhNghiep"><b>Danh Sách Công Việc Và Doanh Nghiệp</b></a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col-1">
                <a href="/Home/GiaoDienDangKYTongHop"><button type="button" class="btn btn-info" style="margin-top:22px"><b>Đăng Ký</b></button></a>
            </div>
            <div class="col-1">
                <a href="/Home/GiaoDienDangNhapTongHop"><button type="button" class="btn btn-info" style="margin-top:22px"><b>Đăng Nhập</b></button></a>
            </div>
            <div class="col-1">
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row p-0 ">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="margin-top:40px;">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/Hinh/congviec1.jpg" class="d-block w-100" alt="First slide" style="width:100%;height:500px;">
                    </div>
                    <div class="carousel-item">
                        <img src="/Hinh/congviec2.jpg" class="d-block w-100" alt="Second slide" style="width:100%;height:500px;">
                    </div>
                    <div class="carousel-item">
                        <img src="/Hinh/congviec3.jpg" class="d-block w-100" alt="Third slide" style=" width:100%;height:500px;">
                    </div>
                    <div class="carousel-item">
                        <img src="/Hinh/congviec4.jpg" class="d-block w-100" alt="Four slide" style=" width:100%;height:500px;">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="row ">
            <marquee width="100%" behavior="scroll" style="height: 100px; margin-top: 5px;" bgcolor="orange">
                <h1 style="line-height: 100px; color: #ffffff;">Các công việc top đầu thịnh hành hiện nay</h1>
            </marquee>
        </div>
        <div class="row ">
            <section class="search">
                <div class="wraper">
                    <form action="/Home/XL_TimKiemNC" method="post">
                        <div class="search-content-items row">
                            <div class="col-3">
                                <div class="search-content-item" style="width:100%; height:100%">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <input type="text" name="tinhthanh" placeholder="Tỉnh thành">
                                </div>
                            </div>


                            <div class="col-3">
                                <div class="search-content-item" style="width:100%; height:100%">
                                    <i class="fas fa-toolbox"></i>
                                    <input type="text" name="congviec" placeholder="Công việc">
                                </div>
                            </div>

                            <div class="col-3">
                                <div class="search-content-item" style="width:100%; height:100%">
                                    <i class="fas fa-building"></i>
                                    <input type="text" name="congty" placeholder="Công ty">
                                </div>
                            </div>

                            <div class="col-3">
                                <div class="search-content-item" style="width:auto">
                                    <button type="submit" name="timkiem">Tìm kiếm</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer class="container-fluid footer" style="color:white">
        <div class="row ">
            <div class="col-md-6">
                <div>
                    <p><big>Công Ty Cổ Phần 3 Bạn Sinh Viên</big></p>
                    <p>Vương Tầm Ước Mơ, Tiến Tới Tương Lai</p>
                </div>
            </div>
            <div class="col-md-6">
                <div>
                    <p>Ngành Công Nghệ Phần Mềm, Ngành Hệ Thống Thông Tin </p>
                    <p>Trực Thuộc Khoa Công Nghệ Thông Tin</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <b> Trụ sở TPHCM:140 Lê Trọng Tấn, Phường Tây Thạnh , Quận Tân Phú , Thành phố Hồ Chí Minh , Việt Nam</b>
            </div>
            <center><a>© 2023-2024 DK_ViecLam Vietnam JSC. All rights reserved.</a></center>
        </div>
    </footer>

</body> 
</html>
